<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUp">


    <ImageView
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/backIV"
        android:onClick="backPressed"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/backIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:text="ðŸ†‚ðŸ…¸ðŸ…¶ðŸ…½ ðŸ†„ðŸ…¿"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/linearLayout"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:elevation="2dp"
        app:cardCornerRadius="8dp"
        android:layout_height="250dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtPhone"
                    android:hint="Phone Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#A6000000"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_maxCharacters="11"
                    app:met_primaryColor="@android:color/black"
                    app:met_singleLineEllipsis="true"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:boxBackgroundMode="outline">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtName"
                    android:hint="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#A6000000"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_maxCharacters="11"
                    app:met_primaryColor="@android:color/black"
                    app:met_singleLineEllipsis="true"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:boxBackgroundMode="outline">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtPassword"
                    android:hint="Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#A6000000"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_maxCharacters="11"
                    app:met_primaryColor="@android:color/black"
                    app:met_singleLineEllipsis="true"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:boxBackgroundMode="outline">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtSecureCode"
                    android:hint="Secure Code(Optional)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#A6000000"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_maxCharacters="11"
                    app:met_primaryColor="@android:color/black"
                    app:met_singleLineEllipsis="true"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <info.hoang8f.widget.FButton
        android:layout_below="@id/linearLayout"
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:text="Sign Up"
        android:textAllCaps="false"
        app:cornerRadius="3dp"
        android:textColor="@android:color/white"
        app:fButtonColor="@color/overlayBackground"
        app:shadowEnabled="true"
        app:shadowHeight="3dp" />

</RelativeLayout>